<%

function capitalizeFirstLetter(string) {
  return string.charAt(0).toUpperCase() + string.slice(1);
}

const heading = section.heading ?? projectData.title ?? capitalizeFirstLetter(formThing.title);

let intro = section.intro ?? formThing.intro;

if (page == 'project') {
    intro = projectData['one-line'];
}
%>

<big-heading>
    <h1 class="roar-voice"><%= $heading %></h1>
    <p class="intro"><%= $intro %></p>

    <% if (isset(section.image)) { %>
    <img src="<%= section.image %>" alt="thing" loading='lazy'>

    <% } %>
</big-heading>